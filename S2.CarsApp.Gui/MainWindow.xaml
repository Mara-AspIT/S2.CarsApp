<Window x:Class="S2.CarsApp.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S2.CarsApp.Gui"
        mc:Ignorable="d"
        Title="Bilprogrammet"
        Height="400"
        Width="400">
  <Grid>
    <StackPanel>
      <Button x:Name="button"
              Content="Hent alle blier"
              Height="50"
              Width="100"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Click="Button_Click" />
      <DataGrid x:Name="dataGrid" />
      <TextBox x:Name="textBoxId" Width="100" HorizontalAlignment="Left"/>
      <TextBox x:Name="textBoxMake"
               Width="100"
               HorizontalAlignment="Left" />

      <TextBox x:Name="textBoxModel"
               Width="100"
               HorizontalAlignment="Left" />

      <TextBox x:Name="textBoxLicencePlate"
               Width="100"
               HorizontalAlignment="Left" />
      <Button x:Name="buttonSave"
              Content="Gem"
              HorizontalAlignment="Left"
              Click="ButtonSave_Click" />

    </StackPanel>
  </Grid>
</Window>
